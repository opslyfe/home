<?xml version="1.0"?>

<labwc_config>

  <core>
    <decoration>server</decoration>
  </core>

  <theme>
    <name></name>
    <cornerRadius>0</cornerRadius>
    <font name="sans" size="10" />
  </theme>

  <desktops number="5" />

  <focus>
    <followMouse>yes</followMouse>
    <followMouseRequiresMovement>yes</followMouseRequiresMovement>
  </focus>

  <keyboard>
    <repeatRate>40</repeatRate>
    <repeatDelay>150</repeatDelay>
    <keybind key="A-c">
    	<action name="Close" />
    </keybind>
    <keybind key="A-Tab">
    	<action name="NextWindow" />
    </keybind>
    <keybind key="A-p">
    	<action name="Execute" command="wmenu-run" />
    </keybind>
    <keybind key="A-Return">
      <action name="Execute" command="footclient" />
    </keybind>
    <keybind key="A-1">
    	<action name="GoToDesktop" to="1" />
    </keybind>
    <keybind key="A-2">
    	<action name="GoToDesktop" to="2" />
    </keybind>
    <keybind key="A-3">
    	<action name="GoToDesktop" to="3" />
    </keybind>
    <keybind key="A-4">
    	<action name="GoToDesktop" to="4" />
    </keybind>
    <keybind key="A-5">
    	<action name="GoToDesktop" to="5" />
    </keybind>
    <keybind key="A-S-1">
    	<action name="SendToDesktop" to="1" />
    </keybind>
    <keybind key="A-S-2">
    	<action name="SendToDesktop" to="2" />
    </keybind>
    <keybind key="A-S-3">
    	<action name="SendToDesktop" to="3" />
    </keybind>
    <keybind key="A-S-4">
    	<action name="SendToDesktop" to="4" />
    </keybind>
    <keybind key="A-S-5">
    	<action name="SendToDesktop" to="5" />
    </keybind>
    <keybind key="A-S-L">
    	<action name="Execute" command="swaylock -f -t -i ~/tmp/di_gi_tile.png" />
    </keybind>
    <keybind key="XF86AudioMute">
    	<action name="Execute" command="pactl set-sink-mute @DEFAULT_SINK@ toggle" />
    </keybind>
    <keybind key="XF86AudioLowerVolume">
    	<action name="Execute" command="pactl set-sink-volume @DEFAULT_SINK@ -5%" />
    </keybind>
    <keybind key="XF86AudioRaiseVolume">
    	<action name="Execute" command="pactl set-sink-volume @DEFAULT_SINK@ +5%" />
    </keybind>
  </keyboard>

  <mouse>
    <default />
    <context name="Root">
      <mousebind button="Right" action="Press">
        <action name="ShowMenu" menu="root-menu" />
      </mousebind>
    </context>
  </mouse>

</labwc_config>
